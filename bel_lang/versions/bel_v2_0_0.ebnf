@@grammar::BEL
@@parseinfo :: True

##############
#  METADATA  #
##############

# BEL VERSION: 2.0.0
# EBNF CREATION TIMESTAMP: November 14, 2017 - 03:53:57PM

#########################
#  GRAMMAR DEFINITIONS  #
#########################

start = bel_statement $ ;
bel_statement = subject:function ~ [relation:relation ~ object:obj] ;

obj = (function | enclosed_statement) ;
enclosed_statement = function_open bel_statement:bel_statement function_close ;

##### FUNCTIONS #####

function = function:funcs function_open function_args:f_args function_close ;
funcs =
    'cellSurfaceExpression' | 'compositeAbundance' | 'biologicalProcess' | 'microRNAAbundance' | 'complexAbundance' | 'proteinAbundance' | 'geneAbundance' | 'translocation' | 'cellSecretion' | 'rnaAbundance' | 'degradation' | 'abundance' | 'pathology' | 'composite' | 'reaction' | 'activity' | 'complex' | 'path' | 'list' | 'tloc' | 'surf' | 'rxn' | 'act' | 'deg' | 'sec' | 'bp' | 'r' | 'g' | 'a' | 'm' | 'p' ;

f_args = ','.{(function | modifier_function | namespace_arg | string_arg)}* ;

##### MODIFIER FUNCTIONS #####

modifier_function = modifier:m_funcs function_open modifier_args:m_args function_close ;
m_funcs =
    'proteinModification' | 'molecularActivity' | 'reactants' | 'products' | 'fragment' | 'location' | 'variant' | 'fromLoc' | 'fusion' | 'toLoc' | 'frag' | 'pmod' | 'fus' | 'loc' | 'var' | 'ma' ;

m_args = ','.{(function | namespace_arg | string_arg)}* ;

##### RELATIONSHIPS #####

relation = relations ;
relations =
    'prognosticBiomarkerFor' | 'positiveCorrelation' | 'negativeCorrelation' | 'rateLimitingStepOf' | 'directlyIncreases' | 'directlyDecreases' | 'causesNoChange' | 'transcribedTo' | 'hasComponents' | 'biomarkerFor' | 'subProcessOf' | 'translatedTo' | 'hasComponent' | 'association' | 'orthologous' | 'hasMembers' | 'decreases' | 'analogous' | 'regulates' | 'increases' | 'hasMember' | 'pos' | 'reg' | 'neg' | 'cnc' | 'isA' | ':>' | '=>' | '>>' | '-|' | '->' | '--' | '=|' ;

##### MISCELLANEOUS #####

namespace_arg = ns_arg:full_nsv ;
full_nsv = ns:ns_string ':' ns_value:(quoted_string | string) ;

string_arg = str_arg:full_string ;
full_string = (quoted_string | string) ;


# quoted_string: Matches like any string but requires it to be in quotation marks.
quoted_string = /\"(?:[^"\\]|\\.)*\"/ ;

# string: Matches any letter, digit or underscore once or more.
string = /\w+/ ;

# ns_string: Matches any capital letter or digit.
ns_string = /[A-Z0-9]+/ ;

function_open = '(' ;
function_close = ')' ;
